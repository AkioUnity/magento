            <action method="setPageType">
                <type>category</type>
            </action>
        </reference>
        <reference name="product_list">
            <action method="setTemplate">
                <template helper="magiczoom/settings/getBlockTemplate">
                    <name>product_list</name>
                    <template>magiczoom/list.phtml</template>
                </template>
            </action>
        </reference>
    </catalog_category_layered>
    <catalog_category_layered_nochildren>
        <reference name="left.reports.product.viewed">
            <action method="setTemplate">
                <template helper="magiczoom/settings/getBlockTemplate">
                    <name>left.reports.product.viewed</name>
                    <template>magiczoom/product_viewed.phtml</template>
                </template>
            </action>
        </reference>
    </catalog_category_layered_nochildren>
    <catalogsearch_result_index>
        <reference name="magiczoom_header">
            <action method="setPageType">
                <type>category</type>
            </action>
        </reference>
        <reference name="search_result_list">
            <action method="setTemplate">
                <template helper="magiczoom/settings/getBlockTemplate">
                    <name>search_result_list</name>
                    <template>magiczoom/list.phtml</template>
                </template>
            </action>
        </reference>
    </catalogsearch_result_index>
    <catalogsearch_advanced_result>
        <reference name="magiczoom_header">
            <action method="setPageType">
                <type>category</type>
            </action>
        </reference>
