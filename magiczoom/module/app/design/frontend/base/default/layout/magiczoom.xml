<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <block type="magiczoom/headers" name="magictoolbox_headers" as="magictoolbox_headers" after='-' />
        </reference>
        <reference name="magictoolbox_headers">
            <block type="magiczoom/header" name="magiczoom_header" as="magiczoom_header" />
        </reference>
        <reference name="right.reports.product.viewed"><!-- left.reports.product.viewed -->
            <action method="setTemplate">
                <template helper="magiczoom/settings/getBlockTemplate">
                    <name>right.reports.product.viewed</name>
                    <template>magiczoom/product_viewed.phtml</template>
                </template>
            </action>
        </reference>
    </default>
    <catalog_product_view>
        <reference name="magiczoom_header">
            <action method="setPageType">
                <type>product</type>
            </action>
        </reference>
        <reference name="product.info.media">
            <action method="setTemplate">
                <template helper="magiczoom/settings/getBlockTemplate">
                    <name>product.info.media</name>
                    <template>magiczoom/media.phtml</template>
                </template>
            </action>
        </reference>
    </catalog_product_view>
    <review_product_list>
