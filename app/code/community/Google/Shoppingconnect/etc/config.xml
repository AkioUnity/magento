<config>
    <modules>
        <Google_Shoppingconnect>
            <version>1.0.0</version>
        </Google_Shoppingconnect>
    </modules>
    <global>
        <models>
            <googleshoppingconnect>
                <class>Google_Shoppingconnect_Model</class>
            </googleshoppingconnect>
        </models>
        <helpers>
            <googleshoppingconnect>
                <class>Google_Shoppingconnect_Helper</class>
            </googleshoppingconnect>
        </helpers>
        <blocks>
            <googleshoppingconnect>
                <class>Google_Shoppingconnect_Block</class>
            </googleshoppingconnect>
        </blocks>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <googleshoppingconnect before="Mage_Adminhtml">Google_Shoppingconnect_Adminhtml</googleshoppingconnect>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <googleshoppingconnect>
                    <files>
                        <default>Google_Shoppingconnect.csv</default>
                    </files>
                </googleshoppingconnect>
            </modules>
        </translate>
        <layout>
            <updates>
                <googleshoppingconnect>
                    <file>google_shoppingconnect.xml</file>
                </googleshoppingconnect>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <googleshoppingconnect>
                    <file>google_shoppingconnect.xml</file>
                </googleshoppingconnect>
            </updates>
        </layout>
    </frontend>
</config>

