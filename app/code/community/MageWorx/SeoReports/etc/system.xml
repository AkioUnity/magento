<config>
    <tabs>
        <mageworx module="seoreports">
            <label>MageWorx</label>
            <sort_order>101</sort_order>
        </mageworx>
    </tabs>
    <sections>
        <mageworx_seo translate="label" module="seoreports">
            <label>SEO Suite</label>
            <tab>mageworx</tab>
            <frontend_type>text</frontend_type>
            <sort_order>600</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <seoreports translate="label" module="seoreports">
                    <label>SEO Reports</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>25</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <max_title_length translate="label comment">
                            <label>Max Length for Meta Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Recommended length up to 70 characters.]]></comment>
                            <validate>required-entry validate-digits validate-greater-than-zero </validate>
                        </max_title_length>                        
                        <max_description_length translate="label">
                            <label>Max Length for Meta Description</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Recommended length up to 150 characters.]]></comment>
                            <validate>required-entry validate-digits validate-greater-than-zero </validate>
                        </max_description_length>
                    </fields>
                </seoreports>
            </groups>
        </mageworx_seo>
    </sections>
</config>
