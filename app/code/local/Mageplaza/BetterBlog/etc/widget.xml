        <description>Post view widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <post_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Post</label>
                <type>label</type>
                <helper_block>
                    <type>mageplaza_betterblog/adminhtml_post_widget_chooser</type>
