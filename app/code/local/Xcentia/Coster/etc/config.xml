                <!--<run><model>xcentia_coster/observer::updateFreeShippingPerProduct</model></run>-->
            <!--</xcentia_coster_update_free_shipping_per_product>-->
            <xcentia_coster_sync_coster_products>
                <schedule><cron_expr>0 0 * * *</cron_expr></schedule>
                <run><model>xcentia_coster/observer::syncCosterProducts</model></run>
            </xcentia_coster_sync_coster_products>
            <xcentia_coster_create_new_products>
                <schedule><cron_expr>10 * * * *</cron_expr></schedule>
                <run><model>xcentia_coster/observer::createNewProduct</model></run>
            </xcentia_coster_create_new_products>
