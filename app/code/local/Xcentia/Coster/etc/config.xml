            </xcentia_coster_sync_coster_inventory>
            <xcentia_coster_update_product_inventory>
                <schedule><cron_expr>*/10 * * * *</cron_expr></schedule>
                <run><model>xcentia_coster/observer::updateInventory</model></run>
            </xcentia_coster_update_product_inventory>
            <!--<xcentia_coster_sync_coster_cost>-->
