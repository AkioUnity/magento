<config>
    <modules>
        <Xcentia_Coster>
            <version>1.0.7</version>
        </Xcentia_Coster>
    </modules>
    <global>
        <resources>
            <xcentia_coster_setup>
                <setup>
                    <module>Xcentia_Coster</module>
                    <class>Xcentia_Coster_Model_Resource_Setup</class>
                </setup>
            </xcentia_coster_setup>
        </resources>
        <blocks>
            <xcentia_coster>
                <class>Xcentia_Coster_Block</class>
            </xcentia_coster>
        </blocks>
        <helpers>
            <xcentia_coster>
                <class>Xcentia_Coster_Helper</class>
            </xcentia_coster>
        </helpers>
        <models>
            <xcentia_coster>
                <class>Xcentia_Coster_Model</class>
                <resourceModel>xcentia_coster_resource</resourceModel>
            </xcentia_coster>
            <xcentia_coster_resource>
                <class>Xcentia_Coster_Model_Resource</class>
                <entities>
                    <product>
                        <table>xcentia_coster_product</table>
                    </product>
                    <category>
                        <table>xcentia_coster_category</table>
                    </category>
                    <collections>
                        <table>xcentia_coster_collections</table>
                    </collections>
                    <style>
                        <table>xcentia_coster_style</table>
                    </style>
                </entities>
            </xcentia_coster_resource>
        </models>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <xcentia_coster>
                    <file>xcentia_coster.xml</file>
                </xcentia_coster>
            </updates>
        </layout>
        <translate>
            <modules>
                <Xcentia_Coster>
                    <files>
                        <default>Xcentia_Coster.csv</default>
                    </files>
                </Xcentia_Coster>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Xcentia_Coster before="Mage_Adminhtml">Xcentia_Coster_Adminhtml</Xcentia_Coster>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <routers>
            <xcentia_coster>
                <use>standard</use>
                <args>
                    <module>Xcentia_Coster</module>
                    <frontName>coster</frontName>
                </args>
            </xcentia_coster>
        </routers>
        <layout>
            <updates>
                <xcentia_coster>
                    <file>xcentia_coster.xml</file>
                </xcentia_coster>
            </updates>
        </layout>
        <translate>
            <modules>
                <Xcentia_Coster>
                    <files>
                        <default>Xcentia_Coster.csv</default>
                    </files>
                </Xcentia_Coster>
            </modules>
        </translate>
    </frontend>
    <default>
        <xcentia_coster>
            <product>
                <breadcrumbs>1</breadcrumbs>
            </product>
            <category>
                <breadcrumbs>1</breadcrumbs>
            </category>
        </xcentia_coster>
    </default>
