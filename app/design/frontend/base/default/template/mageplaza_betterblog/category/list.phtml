<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<?php $_categories = $this->getCategories(); ?>
<div class="block">
    <div class="block-title tag-title">
        <strong><span><?php echo Mage::helper('mageplaza_betterblog')->__('Categories') ?></span></strong>
    </div>
    <?php if ($_categories->getSize() > 0) : ?>
        <div class="block-content category-list-container">
            <ul>
                <?php foreach ($_categories as $_category) : ?>
                    <li>
                        <a href="<?php echo $_category->getCategoryUrl() ?>">
                            <?php echo $_category->getName(); ?>
                        </a>
                    </li>
                <?php endforeach; ?>
            </ul>
        </div>
    <?php else : ?>
        <?php echo Mage::helper('mageplaza_betterblog')->__('There are no categories at this moment'); ?>
    <?php endif; ?>
