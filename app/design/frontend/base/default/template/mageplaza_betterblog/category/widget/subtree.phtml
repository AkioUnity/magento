<?php $_categories = $this->getCategories(); ?>
<?php if ($_categories->getSize() > 0) :?>
    <script type="text/javascript" src="<?php echo $this->getSkinUrl('js/mageplaza_betterblog/tree.js')?>"></script>
    <ul id="<?php echo $this->getUniqueId()?>">
        <?php foreach ($_categories as $_category) : ?>
            <?php echo $this->drawCategory($_category);?>
        <?php endforeach;?>
    </ul>
    <script type="text/javascript">
        betterblogTree('<?php echo $this->getUniqueId()?>');
    </script>
<?php endif;?>
