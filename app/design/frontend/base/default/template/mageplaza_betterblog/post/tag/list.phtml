<?php $_tags = $this->getTags(); ?>
<?php if ($_tags->getSize() > 0) : ?>
    <div class="block">
        <div class="block-title">
            <strong><span><?php echo Mage::helper('mageplaza_betterblog')->__('Tags') ?></span></strong>
        </div>
        <div class="tags-list-container">
            <?php foreach ($_tags as $_tag) : ?>
                    <a href="<?php echo $_tag->getTagUrl() ?>">
                        <?php echo $_tag->getName(); ?>
                    </a>
            <?php endforeach; ?>
        </div>
    </div>
<?php endif; ?>
