<?php $_post = $this->getCurrentPost();?>
<?php if ($_post) :?>
    <div class="post-widget-view">
        <h3><?php echo $_post->getPostTitle()?></h3>
        <div>
            <div class="post_title-widget">
                <?php echo Mage::helper('mageplaza_betterblog')->__('Name');?>:<?php echo $_post->getPostTitle();?>
            </div>
            <div class="post_excerpt-widget">
                <?php echo Mage::helper('mageplaza_betterblog')->__('Short Description');?>:<?php echo $_post->getPostExcerpt();?>
            </div>
            <div class="post_content-widget">
                <?php echo Mage::helper('mageplaza_betterblog')->__('Content');?>:<?php echo $_post->getPostContent();?>
            </div>
            <div class="image-widget">
                <?php if ($_post->getImage()) :?>
    <img src="<?php echo Mage::helper('mageplaza_betterblog/post_image')->init($_post, 'image')->resize(75);?>" alt="<?php echo $this->escapeHtml($_post->getPostTitle());?>" />
<?php endif;?>
            </div>

        </div>
    </div>
<?php endif;?>
