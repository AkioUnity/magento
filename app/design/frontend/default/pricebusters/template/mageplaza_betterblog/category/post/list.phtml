<?php $_posts = $this->getPosts(); ?>
<?php if ($_posts->getSize() > 0) :?>
<div class="posts-list-container">
    <?php foreach ($_posts as $_post) : ?>
        <div class="post-list-item">
            <h3>
                <a href="<?php echo $_post->getPostUrl()?>">
                    <?php echo $_post->getPostTitle();?>
                </a>
            </h3>



            <div class="post-image">
                <?php if ($_post->getImage()) :?>
                    <img src="<?php echo Mage::helper('mageplaza_betterblog/post_image')->init($_post, 'image');?>" alt="<?php echo $this->escapeHtml($_post->getPostTitle());?>" />
                <?php endif;?>
            </div>

            <div class="post-post_excerpt">
                <?php echo $_post->getPostExcerpt();?>
            </div>


        </div>
    <?php endforeach;?>
</div>
<?php endif;?>
