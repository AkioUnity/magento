            <?php foreach($other as $code => $label){ ?>
            <option <?php
                print $this->_otherCondition && $this->_otherCondition == $code ?
                        "selected" :
                        "";
            ?> data-type="<?php print Amasty_Feed_Model_Filter::$_TYPE_OTHER;?>" value="<?php print $code?>"><?php 
                print $this->htmlEscape($label);
            ?></option>
            <?php }?>
        </optgroup>
    </select>
    <select id="condition_operator" name="advanced[:value_order][condition][operator][]" class="select select-operator">
        <?php foreach($conditions as $code => $title){?>
            <option value="<?php print $code?>"><?php 
                print $this->htmlEscape($title);
            ?></option>
        <?php }?>
    </select>
    <input id="condition_value" name="advanced[:value_order][condition][value][]" class="input-text condition-value" type="text"/>
